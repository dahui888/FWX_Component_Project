<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_sertch_weixinnumber"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_x_40"
        android:layout_marginTop="@dimen/public_x_20"
        android:background="@drawable/public_selector_btn_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_sertch_icon"
            android:layout_width="@dimen/public_x_20"
            android:layout_height="@dimen/public_x_20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/public_x_10"
            android:src="@drawable/contacts_icon_search_green" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/public_x_10"
            android:text="微信号/手机号"
            android:textColor="@color/black_dft"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_my_weixinnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/public_x_40"
        android:layout_marginLeft="@dimen/public_x_10"
        android:layout_marginTop="@dimen/public_x_8"
        android:text="我的微信号：15810618744"
        android:textColor="@color/black_dft"
        android:textSize="@dimen/sp_12" />

</LinearLayout>