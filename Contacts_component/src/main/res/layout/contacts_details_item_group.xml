<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/public_x_50"
    android:background="@drawable/public_selector_btn_bg">


    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/public_x_8"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/black_dft"
            android:textSize="@dimen/public_font_14sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/public_x_8"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_weight="2"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/black_dft"
            android:textSize="@dimen/public_font_14sp" />

    </LinearLayout>


    <View
        android:id="@+id/v_visibility"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_x_0.3"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/public_x_8"
        android:background="@color/gray5"
        android:visibility="gone"></View>
</RelativeLayout>