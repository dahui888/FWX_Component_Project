<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/public_x_145"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_x_15"></View>

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/public_selector_btn_bg"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_x_60">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone_iphone_black_24dp" />

        <com.yk.component.res.view.TitleRightText
            android:id="@+id/tv_add_phone_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/public_x_2"
            android:text="@string/contacts_add_phone_contacts"
            android:textColor="@color/gray_dft"
            android:textSize="@dimen/public_font_12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_x_15"></View>
</LinearLayout>